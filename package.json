{
  "name": "brainliest",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=apps/web",
    "dev:admin": "turbo run dev --filter=apps/admin",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "storybook": "turbo run storybook --filter=@brainliest/ui",
    "migrate:generate": "turbo run migrate:generate --filter=@brainliest/db",
    "migrate:apply": "turbo run migrate:apply --filter=@brainliest/db",
    "seed": "turbo run seed --filter=@brainliest/db",
    "depgraph": "dependency-cruiser --config .dependency-cruiser.js src | dot -Tsvg -o docs/dependencies.svg",
    "playwright": "playwright test --config tests/playwright/playwright.config.ts",
    "cleanup:tests-demos": "node scripts/cleanup-tests-demos.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "dependency-cruiser": "^16.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0",
    "@playwright/test": "^1.41.2"
  }
}
