{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "types": [
      "vitest/globals",
      "vitest",
      "@testing-library/jest-dom",
      "@testing-library/react",
      "@testing-library/user-event"
    ],
    "noEmit": true
  },
  "include": [
    "src",
    "tailwind.config.ts",
    "vitest.config.ts",
    ".storybook"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
