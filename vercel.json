{
  "version": 2,
  "name": "brainliest",
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["shared/**", "drizzle.config.ts"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/admin",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/subjects",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/categories",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/categories/(.*)",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/question-interface",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/analytics",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/settings",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/privacy",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/terms",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/contact",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/cookie-settings",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/our-story",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server/index.ts": {
      "maxDuration": 30
    }
  },
  "buildCommand": "npm run build",
  "installCommand": "npm install"
}