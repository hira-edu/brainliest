{
  "version": 2,
  "name": "brainliest",
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(admin|subjects|categories|question-interface|analytics|settings|privacy|terms|contact|cookie-settings|our-story)",
      "dest": "/index.html"
    },
    {
      "src": "/categories/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}